<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#7ec0ee"
    tools:context="ca.dylansheng.weatherapp.activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:id="@+id/relativeLayout_1">

        <com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent" android:layout_height="100dp"
            android:id="@+id/swipeLayout_1">
            <!-- Bottom View Start-->
            <LinearLayout
                android:background="#66ddff00"
                android:id="@+id/bottom_wrapper_1"
                android:layout_width="160dp"
                android:weightSum="1"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <!--What you want to show-->
            </LinearLayout>
            <!-- Bottom View End-->

            <!-- Surface View Start -->
            <LinearLayout
                android:id="@+id/linearLayout_1"
                android:padding="10dp"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!--What you want to show in SurfaceView-->
            </LinearLayout>
            <!-- Surface View End -->
        </com.daimajia.swipe.SwipeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="180sp"
                android:layout_height="70sp"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:textSize="30sp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:id="@+id/textViewMainActivity_1_cityName"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:textSize="60sp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:id="@+id/textViewMainActivity_1_temperature" />


        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_below="@id/relativeLayout_1"
        android:id="@+id/relativeLayout_2"
        android:visibility="invisible">

        <com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent" android:layout_height="100dp"
            android:id="@+id/swipeLayout_2">
            <!-- Bottom View Start-->
            <LinearLayout
                android:background="#66ddff00"
                android:id="@+id/bottom_wrapper_2"
                android:layout_width="160dp"
                android:weightSum="1"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <!--What you want to show-->
            </LinearLayout>
            <!-- Bottom View End-->

            <!-- Surface View Start -->
            <LinearLayout
                android:id="@+id/linearLayout_2"
                android:padding="10dp"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!--What you want to show in SurfaceView-->
            </LinearLayout>
            <!-- Surface View End -->
        </com.daimajia.swipe.SwipeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="180sp"
                android:layout_height="70sp"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:textSize="30sp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:id="@+id/textViewMainActivity_2_cityName"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:textSize="60sp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:id="@+id/textViewMainActivity_2_temperature" />


        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_below="@id/relativeLayout_2"
        android:id="@+id/relativeLayout_3"
        android:visibility="invisible">

        <com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent" android:layout_height="100dp"
            android:id="@+id/swipeLayout_3">
            <!-- Bottom View Start-->
            <LinearLayout
                android:background="#66ddff00"
                android:id="@+id/bottom_wrapper_3"
                android:layout_width="160dp"
                android:weightSum="1"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <!--What you want to show-->
            </LinearLayout>
            <!-- Bottom View End-->

            <!-- Surface View Start -->
            <LinearLayout
                android:id="@+id/linearLayout_3"
                android:padding="10dp"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!--What you want to show in SurfaceView-->
            </LinearLayout>
            <!-- Surface View End -->
        </com.daimajia.swipe.SwipeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="180sp"
                android:layout_height="70sp"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:textSize="30sp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:id="@+id/textViewMainActivity_3_cityName"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:textSize="60sp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:id="@+id/textViewMainActivity_3_temperature" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_below="@id/relativeLayout_3"
        android:id="@+id/relativeLayout_4"
        android:visibility="invisible">
        <com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent" android:layout_height="100dp"
            android:id="@+id/swipeLayout_4">
            <!-- Bottom View Start-->
            <LinearLayout
                android:background="#66ddff00"
                android:id="@+id/bottom_wrapper_4"
                android:layout_width="160dp"
                android:weightSum="1"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <!--What you want to show-->
            </LinearLayout>
            <!-- Bottom View End-->

            <!-- Surface View Start -->
            <LinearLayout
                android:id="@+id/linearLayout_4"
                android:padding="10dp"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!--What you want to show in SurfaceView-->
            </LinearLayout>
            <!-- Surface View End -->
        </com.daimajia.swipe.SwipeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="180sp"
                android:layout_height="70sp"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:textSize="30sp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:id="@+id/textViewMainActivity_4_cityName"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:textSize="60sp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:id="@+id/textViewMainActivity_4_temperature" />
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="Add City"
        android:textAllCaps="false"
        android:id="@+id/buttonAddCity" />
</RelativeLayout>
