                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <!--What you want to show in SurfaceView-->
            </RelativeLayout>
            <!-- Surface View End -->
        </com.daimajia.swipe.SwipeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100sp"
