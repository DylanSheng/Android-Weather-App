<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_change_city"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.dylansheng.weatherapp.activity.addCity">

    <RelativeLayout
        android:id="@+id/addCityActivityRelativeLayout_1"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:id="@+id/changeCityActivityButtonChooseCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Submit"
            android:textAllCaps="false" />

        <EditText
            android:id="@+id/changeCityActivityEditTextChooseCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/changeCityActivityButtonChooseCity"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:hint="Enter City Name"
            android:inputType="textCapWords" />

        <Button
            android:id="@+id/changeCityActivityButtonGetGPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/changeCityActivityButtonChooseCity"
            android:text="GPS" />
    </RelativeLayout>

    <ListView
        android:id="@+id/addCityActivityListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/addCityActivityRelativeLayout_1"></ListView>
</RelativeLayout>